<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="compare vehicles"
            app:titleTextColor="@android:color/black" />


    </com.google.android.material.appbar.AppBarLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:columnCount="5"
            android:rowCount="1">

        <!-- Add ImageViews for cars here -->

        <ImageView
                android:id="@+id/car1ImageView"
                android:layout_width="200"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/cucurella"/>

        <ImageView
                android:id="@+id/car2ImageView"
                android:layout_width="200"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/cucurella"/>
        <ImageView
                android:id="@+id/car3ImageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/cucurella"/>

        <ImageView
                android:id="@+id/car4ImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/cucurella"/>

    </GridLayout>
    <TextView
            android:id="@+id/comparisonTextView"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:text="Comparison Text Goes Here!"
            android:gravity="center"/>

</LinearLayout>
